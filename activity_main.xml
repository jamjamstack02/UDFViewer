<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            app:popupTheme="@style/ThemeOverlay.MaterialComponents.Light"
            app:titleTextColor="@android:color/white"
            app:subtitleTextColor="#CCFFFFFF" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Boş durum -->
    <LinearLayout
        android:id="@+id/emptyStateLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_file_document"
            android:alpha="0.35"
            android:contentDescription="Belge ikonu" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="UDF Belge Görüntüleyici"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/textPrimary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Adalet Bakanlığı UDF formatındaki belgelerinizi açın ve görüntüleyin"
            android:textSize="14sp"
            android:textColor="@color/textSecondary"
            android:gravity="center"
            android:lineSpacingMultiplier="1.4" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="UDF Dosyası Aç"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:onClick="openFilePicker" />

    </LinearLayout>

    <!-- Belge görüntüleyici -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:id="@+id/documentFrame"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <com.udfviewer.app.UdfDocumentView
            android:id="@+id/udfDocumentView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- Zoom göstergesi -->
        <FrameLayout
            android:id="@+id/zoomIndicatorLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginTop="12dp"
            android:background="#CC000000"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/zoomIndicatorText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="13sp"
                android:fontFamily="monospace" />

        </FrameLayout>

    </FrameLayout>

    <!-- FAB -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabOpen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@drawable/ic_folder_open"
        android:contentDescription="Dosya Aç"
        app:tint="@android:color/white" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
